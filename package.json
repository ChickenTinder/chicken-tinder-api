{
  "name": "chicken-tinder-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon src/index.ts",
    "start:prod": "node dist/src/index.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "husky install",
    "validate": "npm run formatcheck && npm run lintcheck && npm run typecheck",
    "lint": "eslint \"**/*.ts\" --fix",
    "lintcheck": "eslint \"**/*.ts\" --quiet",
    "typecheck": "tsc -p ./tsconfig.json",
    "formatcheck": "prettier --check \"**/*.{ts,js,json}\""
  },
  "dependencies": {
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run validate",
      "pre-push": "npm test && npm run validate && lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
